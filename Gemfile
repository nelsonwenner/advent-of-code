# frozen_string_literal: true

source "https://rubygems.org"

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

# Rspec is a computer domain-specific language testing tool written in the programming language Ruby to test Ruby code.
# @see [https://github.com/rspec/rspec-metagem]
gem "rspec", "~> 3.10"

# Guard automates various tasks by running custom rules whenever file or directories are modified. 
# @see [https://github.com/guard/guard]
gem "guard", "~> 2.18", require: false

# Guard::RSpec automatically run your specs (much like autotest).
# @see [https://github.com/guard/guard-rspec]
gem "guard-rspec", "~> 4.7", require: false

# Pry is a runtime developer console and IRB alternative with powerful introspection capabilities.
gem "pry", "~> 0.14.1"
